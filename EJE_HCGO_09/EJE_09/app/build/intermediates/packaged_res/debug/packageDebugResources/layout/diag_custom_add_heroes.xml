<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/agregar_heroe"
        android:textSize="24dp"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/etNombreHeroe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingresar_nombre"/>
    <EditText
        android:id="@+id/etPoderHeroe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingrese_poder"/>
    <EditText
        android:id="@+id/etEAnioHeroe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingrese_anio"/>


</LinearLayout>